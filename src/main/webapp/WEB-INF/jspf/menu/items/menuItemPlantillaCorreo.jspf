<%@ page contentType="text/html" pageEncoding="UTF-8" %>
<%@ taglib prefix="s" uri="/struts-tags" %>

<s:url var="plantillaCorreo" action="PlantillaCorreoAction" method="listar" namespace="/sistema">
    <s:param name="borrado" value="false"/>
</s:url>

<div class="col">
    <a class="link-dark" href="${plantillaCorreo}">
        <div class="card text-center">
            <i class="bi bi-envelope"></i>
            <div class="card-body">
                <h5 class="card-title"><s:text name="Menu.card.title.mailTemplates"/></h5>
                <p class="card-text"><s:text name="Menu.card.text.mailTemplates"/></p>
            </div>
        </div>
    </a>
</div>